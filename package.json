{
  "name": "financial-app",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:generate": "cd packages/db && npx prisma generate && cd ../..",
    "start-user-app": "cd ./apps/user && npm run start"
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.5.3",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.2.4",
  "workspaces": [
    "apps/*",
    "packages/*",
    "packages/ui"
  ],
  "dependencies": {
    "@types/next-auth": "^3.15.0",
    "@types/react": "^18.2.23",
    "framer-motion": "^12.18.1",
    "next-auth": "^4.24.11",
    "react": "^19.1.0",
    "recoil": "^0.7.7",
    "swr": "^2.3.3"
  }
}
